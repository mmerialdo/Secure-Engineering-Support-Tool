<?xml version="1.0" encoding="UTF-8"?>
<!-- This blueprint describes the needed dependencies for the sest-threat-import bundle and the exposed interfaces -->
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
	xmlns:camel="http://camel.apache.org/schema/blueprint" xmlns:cxf="http://cxf.apache.org/blueprint/core"
	xmlns:cxfrs="http://camel.apache.org/schema/blueprint/cxf" xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
	xsi:schemaLocation="
		  http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
		  http://www.osgi.org/xmlns/blueprint-ext/v1.1.0 https://svn.apache.org/repos/asf/aries/tags/blueprint-0.4.1/blueprint-core/src/main/resources/org/apache/aries/blueprint/ext/blueprint-ext.xsd  
		  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
		  http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd
		  http://camel.apache.org/schema/blueprint/cxf http://camel.apache.org/schema/blueprint/cxf/camel-cxf.xsd
		  http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd
		  http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0 http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.1.0.xsd">

	<reference id="threatDBService" timeout="300000" availability="optional"
		interface="org.crmf.persistency.mapper.threat.ThreatServiceInterface" />
	
	<service id="threatImportService" ref="threatImportManager"
		interface="org.crmf.threatimport.threatimportmanager.ThreatImportManagerInputInterface" />
		
	<bean id="threatImportManager" class="org.crmf.threatimport.threatimportmanager.ThreatImportManagerInput" >
		<property name="threatService" ref="threatDBService"></property> 
	</bean>

	<bean id="threatExportImportBean"
		  class="org.crmf.threatimport.threatimportmanager.ThreatImportExportRestServer">
		<property name="threatService" ref="threatDBService"></property>
		<property name="threatImportManager" ref="threatImportManager"></property>
	</bean>

	<bean id="cors-filter"
		  class="org.apache.cxf.rs.security.cors.CrossOriginResourceSharingFilter" />

	<cxfrs:rsServer id="rsServerImportExport" address="/threat"
					serviceClass="org.crmf.threatimport.threatimportmanager.ThreatImportExportRestServer"
					loggingFeatureEnabled="true" loggingSizeLimit="200">
		<cxfrs:providers>
			<ref component-id="cors-filter" />
		</cxfrs:providers>
	</cxfrs:rsServer>

	<camelContext id="threatImportCamelContext"
				  streamCache="true" trace="true" xmlns="http://camel.apache.org/schema/blueprint">

		<route id="threatImport">
			<from uri="cxfrs:bean:rsServerImportExport" />
			<log message="=================== Downloading/Uploading file ${body} ${header.operationName} ${header.CamelHttpUri} ================== "
				 loggingLevel="INFO" />
			<choice>
				<when>
					<simple>${in.header.operationName} == 'exportThreats'</simple>
					<bean ref="threatExportImportBean" method="exportThreats"/>
				</when>
				<when>
					<simple>${in.header.operationName} == 'importThreats'</simple>
					<bean ref="threatExportImportBean" method="importThreats"/>
				</when>
			</choice>
		</route>

	</camelContext>
</blueprint>

