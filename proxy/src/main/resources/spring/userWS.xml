<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:cxf="http://camel.apache.org/schema/cxf"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
    http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
  ">


	<routeContext id="userRouteContext" xmlns="http://camel.apache.org/schema/spring">

		<route id="userCreate">
			<from uri="jetty:https://0.0.0.0:9090:9090/user/create" />
			<log message="user" loggingLevel="DEBUG" />
			<bean ref="userBean" method="createUser" />
		</route>
		<route id="userSave">
			<from uri="jetty:https://0.0.0.0:9090:9090/user/save" />
			<log message="user" loggingLevel="DEBUG" />
			<bean ref="userBean" method="saveUser" />
		</route>
		<route id="userList">
			<from uri="jetty:https://0.0.0.0:9090/user/list" />
			<log message="user" loggingLevel="DEBUG" />
			<bean ref="userBean" method="listUser" />
		</route>
		<route id="userRetrieve">
			<from uri="jetty:https://0.0.0.0:9090/user/retrieve" />
			<log message="user" loggingLevel="DEBUG" />
			<bean ref="userBean" method="retrieveUser" />
		</route>
		<route id="userDelete">
			<from uri="jetty:https://0.0.0.0:9090/user/delete" />
			<log message="user" loggingLevel="DEBUG" />
			<bean ref="userBean" method="deleteUser" />
		</route>

	</routeContext>

</beans>