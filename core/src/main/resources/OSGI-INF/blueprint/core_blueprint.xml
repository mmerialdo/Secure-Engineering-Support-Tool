<?xml version="1.0" encoding="UTF-8"?>
<!-- This blueprint describes the needed dependencies for the sest-core bundle and the exposed interfaces -->
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
	xmlns:camel="http://camel.apache.org/schema/blueprint" xmlns:cxf="http://cxf.apache.org/blueprint/core"
	xmlns:cxfrs="http://camel.apache.org/schema/blueprint/cxf" xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
	xsi:schemaLocation="
		  http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
		  http://www.osgi.org/xmlns/blueprint-ext/v1.1.0 https://svn.apache.org/repos/asf/aries/tags/blueprint-0.4.1/blueprint-core/src/main/resources/org/apache/aries/blueprint/ext/blueprint-ext.xsd  
		  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
		  http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd
		  http://camel.apache.org/schema/blueprint/cxf http://camel.apache.org/schema/blueprint/cxf/camel-cxf.xsd
		  http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd
		  http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0 http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.1.0.xsd">

	<reference id="projectDBService" timeout="300000" availability="optional"
		interface="org.crmf.persistency.mapper.project.AssprojectServiceInterface" />
	<reference id="profileDBService" timeout="300000" availability="optional"
		interface="org.crmf.persistency.mapper.project.AssprofileServiceInterface" />
	<reference id="procedureDBService" timeout="300000" availability="optional"
		interface="org.crmf.persistency.mapper.project.AssprocedureServiceInterface" />
	<reference id="templateDBService" timeout="300000" availability="optional"
		interface="org.crmf.persistency.mapper.project.AsstemplateServiceInterface" />
		
	<reference id="sysRequirementDBService" timeout="300000" availability="optional"
		interface="org.crmf.persistency.mapper.requirement.RequirementServiceInterface" />
		
	<reference id="auditDBService" timeout="300000" availability="optional"
		interface="org.crmf.persistency.mapper.audit.AssAuditServiceInterface" />
	
	<reference id="questionnaireDBService" timeout="300000" availability="optional"
		interface="org.crmf.persistency.mapper.audit.QuestionnaireServiceInterface" />
	
	<reference id="assetDBService" timeout="300000" availability="optional"
		interface="org.crmf.persistency.mapper.asset.AssetServiceInterface" />
		
	<reference id="vulnerabilityDBService" timeout="300000" availability="optional"
		interface="org.crmf.persistency.mapper.vulnerability.VulnerabilityServiceInterface" />
		
	<reference id="threatDBService" timeout="300000" availability="optional"
		interface="org.crmf.persistency.mapper.threat.ThreatServiceInterface" />
		
	<reference id="safeguardDBService" timeout="300000" availability="optional"
		interface="org.crmf.persistency.mapper.safeguard.SafeguardServiceInterface" />
		
	<reference id="riskDBService" timeout="300000" availability="optional"
		interface="org.crmf.persistency.mapper.risk.RiskServiceInterface" />
		
	<reference id="riskTreatmentDBService" timeout="300000" availability="optional"
		interface="org.crmf.persistency.mapper.risk.RiskTreatmentServiceInterface" />
		
	<reference id="riskModelService" timeout="300000"
		availability="optional"
		interface="org.crmf.riskmodel.manager.RiskModelManagerInputInterface" />
		
	<reference id="permissionManagerService" timeout="300000" 
	    availability="optional" interface="org.crmf.user.validation.permission.UserPermissionManagerInputInterface" />

	<reference id="sestObjDBService" timeout="300000" availability="optional"
			   interface="org.crmf.persistency.mapper.general.SestObjServiceInterface"/>


	<service id="assProjectUserService" ref="assProjectUserManager"
		interface="org.crmf.core.riskassessment.project.manager.AssessmentProjectUserInputInterface" />
		
	<service id="assProjectService" ref="assProjectManager"
		interface="org.crmf.core.riskassessment.project.manager.AssessmentProjectInputInterface" />
		
	<service id="assAuditService" ref="assAuditManager"
		interface="org.crmf.core.audit.AuditInputInterface" />

	<service id="assProfileService" ref="assProfileManager"
		interface="org.crmf.core.riskassessment.project.manager.AssessmentProfileInputInterface" />
		
	<service id="assTemplateService" ref="assTemplateManager"
		interface="org.crmf.core.riskassessment.project.manager.AssessmentTemplateInputInterface" />
		
	<service id="assProcedureService" ref="assProcedureManager"
		interface="org.crmf.core.riskassessment.project.manager.AssessmentProcedureInputInterface" />
		
	<service id="sysRequirementService" ref="sysRequirementManager"
		interface="org.crmf.core.riskassessment.project.requirement.SystemProjectRequirementInputInterface" />
		
	<service id="assetModelService" ref="assetModelManager"
		interface="org.crmf.core.assetmodel.manager.AssetModelManagerInputInterface" />
		
	<service id="vulnerabilityModelService" ref="vulnerabilityModelManager"
		interface="org.crmf.core.vulnerabilitymodel.manager.VulnerabilityModelManagerInputInterface" />
		
	<service id="threatModelService" ref="threatModelManager"
		interface="org.crmf.core.threatmodel.manager.ThreatModelManagerInputInterface" />
		
	<service id="safeguardModelService" ref="safeguardModelManager"
		interface="org.crmf.core.safeguardmodel.manager.SafeguardModelManagerInputInterface" />
		
		
	<bean id="assProjectUserManager" class="org.crmf.core.riskassessment.project.manager.AssessmentProjectUserInput" >
		<property name="permissionManager" ref="permissionManagerService"></property>
	</bean>
		
	<bean id="assAuditManager" class="org.crmf.core.audit.AuditInput" >
		<property name="assauditService" ref="auditDBService"></property>
		<property name="questionnaireService" ref="questionnaireDBService"></property>
		<property name="assprojectService" ref="projectDBService"></property>
		<property name="assprocedureService" ref="procedureDBService"></property>
		<property name="safeguardModelInput" ref="safeguardModelManager"></property>
		<property name="riskModelInput" ref="riskModelService"></property>
	</bean>
	
	<bean id="assProjectManager" class="org.crmf.core.riskassessment.project.manager.AssessmentProjectInput" >
		<property name="assprojectService" ref="projectDBService"></property>
		<property name="assprojectUserInput" ref="assProjectUserManager"></property>
		<property name="permissionManager" ref="permissionManagerService"></property>
		<property name="auditInput" ref="assAuditManager"></property>
	</bean>
		
	<bean id="assProfileManager" class="org.crmf.core.riskassessment.project.manager.AssessmentProfileInput" >
		<property name="assprofileService" ref="profileDBService"></property>
		<property name="permissionManager" ref="permissionManagerService"></property>
	</bean>
		
	<bean id="assTemplateManager" class="org.crmf.core.riskassessment.project.manager.AssessmentTemplateInput" >
		<property name="asstemplateService" ref="templateDBService"></property>
		<property name="assprocedureService" ref="procedureDBService"></property>
		<property name="assetModelService" ref="assetDBService"></property>
		<property name="vulnerabilityModelService" ref="vulnerabilityDBService"></property>
		<property name="threatModelService" ref="threatDBService"></property>
		<property name="safeguardModelService" ref="safeguardDBService"></property>
		<property name="modelsCloner" ref="assModelsCloner"></property>
		<property name="riskModelService" ref="riskDBService"></property>
		<property name="permissionManager" ref="permissionManagerService"></property>
	</bean>
		
	<bean id="assProcedureManager" class="org.crmf.core.riskassessment.project.manager.AssessmentProcedureInput" >
		<property name="assprocedureService" ref="procedureDBService"></property>
		<property name="assprojectService" ref="projectDBService"></property>
		<property name="assetModelService" ref="assetDBService"></property>
		<property name="vulnerabilityModelService" ref="vulnerabilityDBService"></property>
		<property name="threatModelService" ref="threatDBService"></property>
		<property name="safeguardModelService" ref="safeguardDBService"></property>
		<property name="modelsCloner" ref="assModelsCloner"></property>
		<property name="riskModelService" ref="riskDBService"></property>
		<property name="riskTreatmentModelService" ref="riskTreatmentDBService"></property>
		<property name="permissionManager" ref="permissionManagerService"></property>
		<property name="templateInput" ref="assTemplateManager"></property>
		<property name="auditService" ref="auditDBService"></property>
		<property name="riskModelInput" ref="riskModelService"></property>
	</bean>
		
	<bean id="sysRequirementManager" class="org.crmf.core.riskassessment.project.requirement.SystemProjectRequirementInput" >
		<property name="requirementService" ref="sysRequirementDBService"></property>
	</bean>
		
	<bean id="assetModelManager" class="org.crmf.core.assetmodel.manager.AssetModelManagerInput" >
		<property name="assetService" ref="assetDBService"></property> 
		<property name="assprocedureService" ref="procedureDBService"></property>
		<property name="sestObjService" ref="sestObjDBService"></property>
	</bean>
		
	<bean id="vulnerabilityModelManager" class="org.crmf.core.vulnerabilitymodel.manager.VulnerabilityModelManagerInput" >
		<property name="vulnerabilityService" ref="vulnerabilityDBService"></property> 
		<property name="assprocedureService" ref="procedureDBService"></property>
		<property name="sestObjService" ref="sestObjDBService"></property>
	</bean>
		
	<bean id="threatModelManager" class="org.crmf.core.threatmodel.manager.ThreatModelManagerInput" >
		<property name="threatService" ref="threatDBService"></property> 
		<property name="assprocedureService" ref="procedureDBService"></property>
		<property name="sestObjService" ref="sestObjDBService"></property>
	</bean>
		
	<bean id="safeguardModelManager" class="org.crmf.core.safeguardmodel.manager.SafeguardModelManagerInput" >
		<property name="safeguardService" ref="safeguardDBService"></property> 
		<property name="assprocedureService" ref="procedureDBService"></property> 
		<property name="riskModelService" ref="riskDBService"></property>
	</bean>
		
	<bean id="assModelsCloner" class="org.crmf.core.riskassessment.utility.RiskAssessmentModelsCloner" >
	    <property name="safeguardModelInput" ref="safeguardModelManager"></property>
		<property name="assetModelService" ref="assetDBService"></property>
		<property name="vulnerabilityModelService" ref="vulnerabilityDBService"></property>
		<property name="threatModelService" ref="threatDBService"></property>
		<property name="safeguardModelService" ref="safeguardDBService"></property>
		<property name="riskModelService" ref="riskDBService"></property>
		<property name="riskTreatmentModelService" ref="riskTreatmentDBService"></property>
	</bean>
	
	
</blueprint>
